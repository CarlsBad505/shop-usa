setTimeout(function() {
  if ($('.flash:visible').length == 0) {
    $('.flash').remove();
  }
}, 4000);

function initSlider() {
  $(".Modern-Slider").slick({
    autoplay:true,
    autoplaySpeed:5000,
    speed:900,
    slidesToShow:1,
    slidesToScroll:1,
    pauseOnHover:false,
    dots:true,
    pauseOnHover:false,
    cssEase:'linear',
    fade:true,
    draggable:false,
    prevArrow:'<button class="PrevArrow"></button>',
    nextArrow:'<button class="NextArrow"></button>',
  });
}

