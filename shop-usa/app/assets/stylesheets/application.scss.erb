@import "bootstrap-sprockets";
@import "bootstrap";

body {
  color: white;
}

.background {
	position: relative;
	background-image: url(<%= asset_path('cover2.jpg') %>);
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	height: 100vh;
}

body .container {
  margin-top: 100px;
}

.navbar {
  padding: 1rem;
  background-color: black;
  // z-index: 1;
  border: none;
}

.navbar .logo {
  position: relative;
  left: 2rem;
  cursor: pointer;
  height: 50px;
}

.navbar-default .navbar-nav > li > a {
  color: white;
}

.navbar-default .navbar-nav > li > a:hover {
  color: #FED100;
}

.navbar-default .navbar-text {
  color: white;
}

.logo:hover { 
  transform: scale(1.15,1.15); 
}

.flash {
  margin-top: 70px;
}

.alert {
  margin-bottom: 0px;
}

.admin-access {
  text-align: center;
  font-weight: bold;
  color: red;
}

