@import "bootstrap-sprockets";
@import "bootstrap";

body {
  color: white;
}

.background {
	position: relative;
	background-image: url(<%= asset_path('cover2_blur.jpg') %>);
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	height: 100vh;
}

body .container {
  margin-top: 100px;
}

body .index {
  margin-bottom: 135px;
}

.navbar {
  padding: 1rem;
  background-color: black;
  // z-index: 1;
  border: none;
}

.navbar .logo {
  position: relative;
  left: 2rem;
  cursor: pointer;
  height: 50px;
}

.navbar-default .navbar-nav > li > a {
  color: white;
}

.navbar-default .navbar-nav > li > a:hover {
  color: #FED100;
}

.navbar-default .navbar-text {
  color: white;
}

.logo:hover { 
  transform: scale(1.15,1.15); 
}

.flash {
  margin-top: 70px;
}

.alert {
  margin-bottom: 0px;
}

.admin-access {
  text-align: center;
  font-weight: bold;
  color: red;
}

#footer {
	position: fixed;
	bottom: 0;
}

.footer-basic-centered{
	background-color: #292c2f;
	box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.12);
	box-sizing: border-box;
	width: 100%;
	text-align: center;
	font: normal 18px #ffffff;
	padding: 25px;
	margin-top: 0px;
}

.footer-basic-centered .footer-company-motto{
	color: #ffffff;
	font-size: 12px;
	margin: 0;
}


/* If you don't want the footer to be responsive, remove these media queries */

@media (max-width: 600px) {

	.footer-basic-centered{
		padding: 35px;
	}

	.footer-basic-centered .footer-company-motto{
		font-size: 18px;
	}

	.footer-basic-centered .footer-company-name{
		font-size: 12px;
	}

	.footer-basic-centered .footer-links{
		font-size: 14px;
		padding: 25px 0 20px;
	}

	.footer-basic-centered .footer-links a{
		line-height: 1.8;
	}
}