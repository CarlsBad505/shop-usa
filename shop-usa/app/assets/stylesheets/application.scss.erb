@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";

$navbar-link-color: #ccc;
$navbar-link_hover: #FED100;
$brand-font: 'helvetica';
$brand-color: #FED100;

body {
  margin-top: 70px;
}

.form-control {
	width: 50%;
}

.devise-background {
  padding-top: 50px;
  padding-bottom: 50px;
  background: linear-gradient(to right, #fff, #E8E8E8);
}

.devise-hr {
  // max-width: 20em;
  border-top: 2px solid $brand-color;
  // margin-bottom: 30px;
}

.devise-btn {
  color: black;
  background-color: $brand-color;
}

.devise-btn:hover {
  background-color: $brand-color !important;
  color: black !important;
  border: .15em solid black !important;
}

.devise-background input {
  margin: auto;
}

.devise-center {
  text-align: center;
}

.navbar {
  padding: 1rem;
  background-color: black;
  // z-index: 1;
  border: none;
}

.navbar #cart-text {
  padding-top: 1em;
  color: $navbar-link-color;
}

.navbar-default .navbar-nav > li > a {
	color: $navbar-link-color;
	font-family: $brand-font;
	font-weight: bold;
}

.navbar-default .navbar-link:hover {
  color: $navbar-link_hover;
  text-decoration: none !important;
}

.navbar .logo {
  position: relative;
  left: 2rem;
  cursor: pointer;
  height: 50px;
}

.navbar-default .navbar-nav > li > a {
  color: $navbar-link-color;
}

.navbar-default .navbar-nav > li > a:hover {
  color: $navbar-link_hover;
}

.navbar-default .navbar-text {
  color: $navbar-link-color;
}

.logo:hover {
  transform: scale(1.15,1.15);
}

.flash {
  margin-top: 70px;
}

.alert {
  margin-bottom: 0px;
}

.admin-access {
  text-align: center;
  font-weight: bold;
  color: red;
}

.footer {
  // position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 1rem;
}

.footer-basic-centered{
	background-color: #292c2f;
	box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.12);
	box-sizing: border-box;
	width: 100%;
	text-align: center;
	font-size: normal 18px #ffffff;
	padding: 25px;
	margin-top: 0px;
}

.footer-basic-centered .footer-company-motto{
	color: #ffffff;
	font-size: 12px;
	margin: 0;
}

.footer-basic-centered .footer-company-name{
	color:  #8d9093;
	font-size: 14px;
	margin: 0;
}


/* If you don't want the footer to be responsive, remove these media queries */

@media (max-width: 600px) {

	.footer-basic-centered{
		padding: 35px;
	}

	.footer-basic-centered .footer-company-motto{
		font-size: 18px;
	}

	.footer-basic-centered .footer-company-name{
		font-size: 12px;
	}

	.footer-basic-centered .footer-links{
		font-size: 14px;
		padding: 25px 0 20px;
	}

	.footer-basic-centered .footer-links a{
		line-height: 1.8;
	}
}
