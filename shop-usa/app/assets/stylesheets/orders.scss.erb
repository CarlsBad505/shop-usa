$primary-color: #FED100;

.myorders-background {
  padding-top: 50px;
  background-image: url(<%= image_path 'https://s3-us-west-2.amazonaws.com/shop-usa/history.png' %>);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  height: 100vh;
}

.myorders-background2 {
  padding-top: 50px;
  background-image: url(<%= image_path 'https://s3-us-west-2.amazonaws.com/shop-usa/history.png' %>);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  height: 100%;
}

.history-item {
  background-color: rgba(232,232,232,0.7) !important;
  border: 2px solid black !important;
}

.avoid-stacking {
  margin-bottom: 10px;
}

.no-orders-msg {
  color: black;
  font-size: 1.5em;
  font-weight: bold;
}

.my-orders-hr {
  max-width: 20em;
  border-top: 2px solid $primary-color;
  margin-bottom: 30px;
}

.admin-create {
  text-align: center;
}

.admin-title {
  text-align: center;
}

.admin-instructions {
  text-align: center;
  color: white;
}

.user-title {
  text-align: center;
}

.require {
  font-style: italic;
  font-size: small;
}

div.dataTables_length label {
 font-weight: bold !important;
}

div.dataTables_filter label {
  font-weight: bold !important;
}

.table-hover > tbody > tr:hover {
  color: white;
}

.table-background {
  background-color: lightgray;
  border-radius: 5px;
}
