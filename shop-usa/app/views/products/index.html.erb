<div class="custom-inquiry-banner">
  <p class="product-banner text-center">Need something custom? Find it online and get a free shipping estimate now!</p>
  <a class="page-scroll btn btn-primary btn-banner" href="#custom-inquiry">Estimate Now</a>
</div>

<div class="index-products">

  <div class="container">
    <div class="row products-gallery">
      <div class="col-md-3">
        <div class="list-group">
          <a href="#" class="list-group-item">Category 1</a>
          <a href="#" class="list-group-item">Category 2</a>
          <a href="#" class="list-group-item">Category 3</a>
        </div>
        <div class="list-group">
          <div class="list-group-item">
            <i class="fa fa-comments-o fa-5x" aria-hidden="true"></i>
            <p class="">Don't see what you need? Tell us what you're looking for and get a free shipping estimate now!</p>
            <a class="page-scroll btn btn-primary btn-cart btn-slider" href="#custom-inquiry">Estimate Now</a>
            <%#= link_to "Estimate Now", enterprise_path, class: 'btn btn-primary btn-cart btn-slider' %>
          </div>
        </div>
        <div class="list-group">
          <div class="list-group-item">
            <i class="fa fa-suitcase fa-5x" aria-hidden="true"></i>
            <p class="">Need help sourcing materials or products? Let our account managers help your commercial needs.</p>
            <%= link_to "Learn More", enterprise_path, class: 'btn btn-primary btn-cart btn-slider' %>
          </div>
        </div>
      </div>


        <div class="col-md-9">
          <div class="row">
            <% @products.each do |product| %>
              <% if product.active %>
                <%= form_for @order_item, remote: true do |f| %>
                <%= f.hidden_field(:product_id, value: product.id) %>
                <div class="col-sm-4 col-lg-4 col-md-4">
                  <div class="thumbnail">
                    <%= image_tag product.photo %>
                    <div class="caption">
                      <h4 class="pull-right">$<%= product.price %></h4>
                      <!-- If this link below goes to a third party... then need to make it open in a new tab -->
                      <h4><%= product.name %></h4>
                      <p><%= product.description %></p>
                      <div class="row">
                        <div class="col-md-6">
                          <%= f.button '<i class="fa fa-shopping-cart" aria-hidden="true"></i> Add'.html_safe, class: 'add-cart' %>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group align-center">
                            Qty: <%= f.number_field :quantity, value: 1, class: 'product-qty' %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>

    <section id="custom-inquiry" class="custom-inquiry">
      <div class="row">
        <div class="col-md-12">
          <div class="well-sm well-custom-inquiry">
            <div class="form-horizontal">
            <%= form_for @message, url: products_path, method: :post, remote: true do |f| %>
              <fieldset>
                <legend class="text-center header legend-custom-inquiry">Free Shipping Estimate
                <p class="sub-legend-custom-inquiry">Can't find what you need? Provide a link to your desired product and we'll estimate the shipping cost for you!</p>
                </legend>
                <div id="inquiry-alrt-success"></div>
                <div id="inquiry-alrt-error"></div>
                <div id="inquiry-div">
                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-user fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.text_field :first_name, class: "form-control input-custom-inquiry", placeholder: "First Name"%>
                      </div>
                  </div>
                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-user fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.text_field :last_name, class: "form-control input-custom-inquiry", placeholder: "Last Name" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-envelope-o fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.email_field :email_address, class: "form-control input-custom-inquiry", placeholder: "Email Address" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-phone-square fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.phone_field :phone, class: "form-control input-custom-inquiry", placeholder: "Phone" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-link fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.url_field :url, class: "form-control input-custom-inquiry", placeholder: "Include a link to your desired product" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-pencil-square-o fa-2x bigicon"></i></span>
                      <div class="col-md-8">
                        <%= f.text_area :note, class: "form-control input-custom-inquiry", placeholder: "Enter your massage for us here. We will get back to you within 2 business days.", rows: 7 %>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="col-md-12 text-center">
                        <%= f.submit "Submit", class: 'btn btn-primary btn-lg btn-cart' %>
                      </div>
                  </div>
                </div>
              </fieldset>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </section>

</div>

<%= render 'layouts/footer' %>

<script type="text/javascript">
  // jQuery for page scrolling feature - requires jQuery Easing plugin
  $(document).ready(function() {
    $(function() {
      $('a.page-scroll').bind('click', function(event) {
          var $anchor = $(this);
          $('html, body').stop().animate({
              scrollTop: $($anchor.attr('href')).offset().top
          }, 1500, 'easeInOutExpo');
          event.preventDefault();
      });
    });
  });
</script>
