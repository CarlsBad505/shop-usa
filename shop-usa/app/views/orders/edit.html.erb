<div class="container">
  <% if current_user.admin? %>
    <h1>Edit Order</h1>
    <h4>Order ID: <%= "#" + "#{@order.id}" %></h4>
    
    <%= form_for @order do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, autofocus: true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label 'Description' %>
        <%= f.text_field :description, autofocus: false, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label 'Shipping Charge' %>
        <%= f.number_field :shipping_charge, autofocus: false, class: "form-control" %>
      </div>
      
       <div class="form-group">
        <%= f.label 'Track Package' %>
        <%= f.url_field :track_package, autofocus: false, class: "form-control" %>
      </div>
      
       <div class="form-group">
        <%= f.submit "Update Order!", class: "btn btn-success" %>
        <%= link_to "Cancel", orders_path, class: 'btn btn-warning' %>
        <%= link_to "Delete Order", @order, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this order?'} %>
       </div>
    <% end %>
  <% else %>
    <p class="admin-access">You are not authorized to view this page!</p>
  <% end %>
</div>
